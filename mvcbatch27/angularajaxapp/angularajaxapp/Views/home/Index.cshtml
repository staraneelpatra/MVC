
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/angular.min.js"></script>
    <script>
        var app = angular.module("app1", []);
        app.controller("ctrl", function ($scope, $http) {
            //send an ajax call to getprods method
            $http.get("/home/getprods")
            .success(function (response) {
                //para response will receive products collection as json
                $scope.prods = response;
            });//closing ajax call
        });//closing controller
    </script>
   <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body ng-app="app1" ng-controller="ctrl">
    <table border="1" style="font-size:x-large">
        <tr>
            <th>pid</th><th>name</th><th>price</th>
        </tr>
        <tr ng-repeat="p in prods">
            <td>{{p.prodid}}</td>
            <td>{{p.prodname}}</td>
            <td>{{p.prodprice}}</td>
        </tr>
    </table>
 </body>





</html>
